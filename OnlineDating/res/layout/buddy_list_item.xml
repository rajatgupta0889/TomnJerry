<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center" >

    <TextView
        android:id="@+id/buddyName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_border_radius"
        android:gravity="center|right"
        android:paddingRight="15dp"
        android:text=""
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/buddyImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buddyName"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/user_profile" />

    <ImageView
        android:id="@+id/coffeeImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/buddyImage"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/buddyImage"
        android:background="#e7e7e7"
        android:padding="10dp"
        android:src="@drawable/ic_message_pink" />

    <ImageView
        android:id="@+id/calendarImageView"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/buddyImage"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/buddyImage"
        android:background="#e7e7e7"
        android:padding="10dp"
        android:src="@drawable/ic_calendar_pink" />

</RelativeLayout>