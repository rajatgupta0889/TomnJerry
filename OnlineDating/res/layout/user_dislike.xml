<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fa4e6a" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/user_dislike_page" />

    <TextView
        android:id="@+id/matchNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:text="You are about to thumbs down Nataile."
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/matchLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchNameTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:text="Please Let us know what factors influenced your decision so we can find better match for you"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/interestCB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/matchLocationTextView"
        android:layout_marginTop="20dp"
        android:background="#c54b5f"
        android:button="@drawable/ic_yellow_cb"
        android:text="Her Intetrests"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/positionCB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/interestCB"
        android:layout_below="@+id/interestCB"
        android:layout_marginTop="1dp"
        android:background="#c54b5f"
        android:button="@drawable/blue_cb_selector"
        android:text="Her Work Position"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <CheckBox
        android:id="@+id/heightCB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/positionCB"
        android:layout_below="@+id/positionCB"
        android:layout_marginTop="1dp"
        android:background="#c54b5f"
        android:button="@drawable/ic_orange_cb"
        android:text="Height"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/imageCB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/heightCB"
        android:layout_below="@+id/heightCB"
        android:layout_marginTop="1dp"
        android:background="#c54b5f"
        android:button="@drawable/ic_green_cb"
        android:text="Profile Images"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/userDislikeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#5e2e36"
        android:text="Go"
        android:textColor="#f98396" />

</RelativeLayout>