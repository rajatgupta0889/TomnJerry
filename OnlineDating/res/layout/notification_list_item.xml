<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/content_desc_user_req"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sideImageCoffee"
        android:layout_centerInParent="true"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/sideImageCoffee"
        android:gravity="center"
        android:text="@string/notif_sample_text" />

    <ImageView
        android:id="@+id/sideImageCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userImage"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/userImage"
        android:contentDescription="@string/content_desc_coffee_invite"
        android:src="@drawable/ic_coffee_pink" />

    <ImageView
        android:id="@+id/sideImageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/notificationText"
        android:contentDescription="@string/content_desc_user_req"
        android:src="@drawable/ic_user_pink" />

    <ImageView
        android:id="@+id/sideCalImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/notificationText"
        android:contentDescription="@string/content_desc_coffee_caledar"
        android:src="@drawable/ic_cal_pink" />

</RelativeLayout>